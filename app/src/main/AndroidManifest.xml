<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.alexandremarcondes.egginc.companion">

    <application
        android:name=".EggIncCompanionApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EggIncCompanion">
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.EggIncCompanion.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.EggIncCompanion.NoActionBar">
        </activity>
        <!-- Needed for UI tests -->
        <activity
            android:name="androidx.activity.ComponentActivity"
            android:theme="@style/Theme.EggIncCompanion" />
    </application>

</manifest>